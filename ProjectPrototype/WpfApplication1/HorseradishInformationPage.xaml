        <Image Height="156" Canvas.Left="91" Canvas.Top="98" Width="208" Source="horseradish-root.jpg" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox x:Name="_HorseradishNotes" Height="104" Canvas.Left="91" TextWrapping="Wrap" Text="" Canvas.Top="317" Width="416" Foreground="Black" BorderBrush="Black" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
