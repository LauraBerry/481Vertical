            <Button x:Name="Flowers" Background="#FF0F8B42" Content="Flowers" Height="35" Width="145"/>
            <Button x:Name="Herbs" Background="#FF0F8B42" Content="Herbs" Height="35" Width="145"/>
        </ListBox>
        <Label Content="         Plants" Canvas.Left="70" Canvas.Top="29" Width="163" FontSize="20"/>
        <TextBox Height="23" Canvas.Left="70" TextWrapping="Wrap" Text="" Canvas.Top="251" Width="120" Background="#FFF7F9F7"/>
        <Button Content="Search" Canvas.Left="190" Canvas.Top="251" Width="60" Height="23"/>
    </Canvas>
</Page>
